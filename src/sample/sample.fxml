<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1280.0" styleClass="background" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <right>
      <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#addRegister" prefHeight="25.0" prefWidth="200.0" styleClass="buttonadd" text="Agregar" />
            <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Modificar">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#deleteRegister" prefHeight="25.0" prefWidth="200.0" styleClass="buttondel" text="Eliminar" />
            <Button layoutX="20.0" layoutY="55.0" mnemonicParsing="false" onAction="#showReport" prefHeight="25.0" prefWidth="200.0" text="Imprimir" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <Label fx:id="LblStatus" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <VBox prefHeight="200.0" prefWidth="150.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnClientes" mnemonicParsing="false" onAction="#clickClientes" prefHeight="25.0" prefWidth="150.0" styleClass="boton" text="Clientes" />
            <Button fx:id="btnPiedad" mnemonicParsing="false" onAction="#clickPiedad" prefHeight="25.0" prefWidth="150.0" styleClass="boton" text="Piedad" />
            <Button fx:id="btnPastor" layoutX="10.0" layoutY="20.0" mnemonicParsing="false" onAction="#clickBuenPastor" prefHeight="25.0" prefWidth="150.0" styleClass="boton" text="Buen Pastor" />
            <Button fx:id="btnPagos" layoutX="10.0" layoutY="90.0" mnemonicParsing="false" onAction="#clickPagos" prefHeight="25.0" prefWidth="150.0" styleClass="boton" text="Pagos" />
            <Button fx:id="btnDocumentos" layoutX="10.0" layoutY="125.0" mnemonicParsing="false" onAction="#clickDocumentos" prefHeight="25.0" prefWidth="150.0" text="Documentos" />
            <Button fx:id="btnGastos" layoutX="20.0" layoutY="160.0" mnemonicParsing="false" onAction="#clickGastos" prefHeight="25.0" prefWidth="150.0" text="Gastos" />
            <Button fx:id="btnIngresos" layoutX="20.0" layoutY="195.0" mnemonicParsing="false" onAction="#clickIngresos" prefHeight="25.0" prefWidth="150.0" text="Ingresos" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Archivo">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Editar">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Ayuda">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <TabPane fx:id="tabPaneM" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="tabDisponibilidad" onSelectionChanged="#checkTab" text="Disponibilidad">
               <content>
                  <TabPane fx:id="TabPaneD" side="BOTTOM" styleClass="fondo" tabClosingPolicy="UNAVAILABLE">
                     <tabs>
                        <Tab fx:id="tabBuen_Pastor" onSelectionChanged="#checkTab" text="Buen Pastor">
                           <content>
                              <GridPane fx:id="gridDisp2" alignment="CENTER">
                                 <opaqueInsets>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </opaqueInsets>
                              </GridPane>
                           </content>
                        </Tab>
                        <Tab fx:id="tabPiedad" onSelectionChanged="#checkTab" text="Piedad">
                           <content>
                              <GridPane fx:id="gridDisp" alignment="CENTER">
            
                                 <opaqueInsets>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </opaqueInsets>
                              </GridPane>
                           </content>
                        </Tab>
                     </tabs>
                  </TabPane>
               </content>
            </Tab>
            <Tab fx:id="tabTabla" text="Tabla">
               <content>
                  <TableView fx:id="tabledata">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
