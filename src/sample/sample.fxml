<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1280.0" styleClass="background" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <right>
      <VBox prefHeight="200.0" prefWidth="140.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAdd" disable="true" mnemonicParsing="false" onAction="#addRegister" prefHeight="35.0" prefWidth="120.0" styleClass="buttonadd" text="Agregar" />
            <Button fx:id="btnMod" disable="true" mnemonicParsing="false" onAction="#modify" prefHeight="35.0" prefWidth="120.0" text="Modificar">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="btnDel" disable="true" mnemonicParsing="false" onAction="#deleteRegister" prefHeight="35.0" prefWidth="120.0" styleClass="buttondel" text="Eliminar" />
            <Button fx:id="btnImp" disable="true" layoutX="20.0" layoutY="55.0" mnemonicParsing="false" onAction="#showReport" prefHeight="35.0" prefWidth="120.0" text="Imprimir" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </right>
   <bottom>
      <Label fx:id="LblStatus" BorderPane.alignment="CENTER" />
   </bottom>
   <left>
      <VBox prefHeight="200.0" prefWidth="140.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnClientes" mnemonicParsing="false" onAction="#clickClientes" prefHeight="35.0" prefWidth="120.0" text="Clientes">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="btnPiedad" mnemonicParsing="false" onAction="#clickPiedad" prefHeight="35.0" prefWidth="120.0" text="Piedad">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="btnPastor" layoutX="10.0" layoutY="20.0" mnemonicParsing="false" onAction="#clickBuenPastor" prefHeight="35.0" prefWidth="120.0" text="Buen Pastor">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="btnPagos" layoutX="10.0" layoutY="90.0" mnemonicParsing="false" onAction="#clickPagos" prefHeight="35.0" prefWidth="120.0" text="Pagos">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="btnDocumentos" layoutX="10.0" layoutY="125.0" mnemonicParsing="false" onAction="#clickDocumentos" prefHeight="35.0" prefWidth="120.0" text="Documentos">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="btnGastos" layoutX="20.0" layoutY="160.0" mnemonicParsing="false" onAction="#clickGastos" prefHeight="35.0" prefWidth="120.0" text="Gastos">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            <Button fx:id="btnIngresos" layoutX="20.0" layoutY="195.0" mnemonicParsing="false" onAction="#clickIngresos" prefHeight="35.0" prefWidth="120.0" text="Ingresos">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </left>
   <center>
      <TabPane fx:id="tabPaneM" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab fx:id="tabDisponibilidad" onSelectionChanged="#checkTab" text="Disponibilidad">
               <content>
                  <TabPane fx:id="tabPaneD" side="BOTTOM" styleClass="fondo" tabClosingPolicy="UNAVAILABLE">
                     <tabs>
                        <Tab fx:id="tabBuen_Pastor" onSelectionChanged="#checkTab" text="Buen Pastor">
                           <content>
                              <GridPane fx:id="gridDisp2" alignment="CENTER">
                                 <opaqueInsets>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </opaqueInsets>
                              </GridPane>
                           </content>
                        </Tab>
                        <Tab fx:id="tabPiedad" onSelectionChanged="#checkTab" text="Piedad">
                           <content>
                              <GridPane fx:id="gridDisp" alignment="CENTER">
            
                                 <opaqueInsets>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                                 </opaqueInsets>
                              </GridPane>
                           </content>
                        </Tab>
                     </tabs>
                  </TabPane>
               </content>
            </Tab>
            <Tab fx:id="tabTabla" text="Tabla">
               <content>
                  <TableView fx:id="tabledata">
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
            <Tab text="Formulario">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <top>
                        <BorderPane BorderPane.alignment="CENTER">
                           <left>
                              <Label styleClass="table_label" text="Piedad" BorderPane.alignment="CENTER">
                                 <padding>
                                    <Insets left="30.0" top="30.0" />
                                 </padding>
                                 <BorderPane.margin>
                                    <Insets bottom="30.0" />
                                 </BorderPane.margin>
                              </Label>
                           </left>
                           <right>
                              <Label styleClass="table_label" text="Nicho: 0" BorderPane.alignment="CENTER">
                                 <BorderPane.margin>
                                    <Insets bottom="30.0" right="30.0" top="30.0" />
                                 </BorderPane.margin>
                              </Label>
                           </right>
                        </BorderPane>
                     </top>
                  </BorderPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
