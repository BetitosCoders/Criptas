<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.clientPicker">
   <children>
      <VBox alignment="CENTER" prefHeight="350.0" prefWidth="400.0">
         <children>
            <Label text="Clientes:">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <TextField fx:id="txtSearch" alignment="CENTER" maxHeight="30.0" maxWidth="250.0" onKeyTyped="#search" prefHeight="30.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </TextField>
            <ListView fx:id="listClients" maxHeight="200.0" maxWidth="250.0" prefHeight="200.0" prefWidth="250.0" />
            <HBox maxWidth="250.0" prefWidth="250.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="btnAccept" maxWidth="120.0" mnemonicParsing="false" onAction="#accept" prefWidth="120.0" text="Aceptar">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnCancel" maxWidth="120.0" mnemonicParsing="false" onAction="#cancel" prefWidth="120.0" text="Cancelar" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</HBox>
